<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/orange" android:startColor="@color/orange" />


            <corners android:radius="1dp" />
            <padding android:bottom="0dp" android:left="5dp" android:right="5dp" android:top="0dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="1dp" />
            <gradient android:angle="270" android:endColor="#6D6968" android:startColor="#6D6968" />


            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>

</selector>